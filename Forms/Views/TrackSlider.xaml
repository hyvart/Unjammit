<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jammit.Forms.Views.TrackSlider"
             BackgroundColor="DarkGray">

  <StackLayout Orientation="Vertical">
    <Label  x:Name="TitleLabel" Text="{Binding Track.Title}" WidthRequest="40" HeightRequest="35" BackgroundColor="Green" FontSize="12" VerticalOptions="Start" />
    <StackLayout VerticalOptions="FillAndExpand" BackgroundColor="Aqua">
      <Slider x:Name="VolumeSlider"
              Minimum="0"
              Maximum="100"
              Value="{Binding Volume, Mode=OneWayToSource}"
              ValueChanged="VolumeSlider_ValueChanged"
              MinimumTrackColor="DarkCyan"
              MaximumTrackColor="LightCyan"
              Rotation="{OnPlatform Android=270, Default=90}" />
    </StackLayout>
    <StackLayout Orientation="Horizontal" VerticalOptions="End">
      <Button x:Name="MuteButton" Text="M" BackgroundColor="LightGray" MinimumWidthRequest="{OnPlatform Android=3}" Clicked="MuteButton_Clicked" />
      <Button x:Name="SoloButton" Text="S" BackgroundColor="LightGray" MinimumWidthRequest="{OnPlatform Android=3}" IsEnabled="False" />
    </StackLayout>
  </StackLayout>

</ContentView>